                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" id="btnCapNhatMatKhau" class="btn btn-md btn-default">Cập nhật mật khẩu&nbsp;&nbsp;<i class="fab fa-telegram-plane"></i></button>
                    <button id="btnClose" type="button" class="btn btn-md" onclick="DongDoiPass()">Đóng lại&nbsp;&nbsp;<i class="fas fa-times-circle"></i></button>
                </div>
            </form>
        </div>
    </div>
</div>
</div>

@section scripts
{
    <script>
        function HienMatKhau(id) {
            var idQuery = '#' + String(id);
            var passwordBox = $(idQuery)[0];
            if ($(passwordBox).attr('type') == 'password') {
                $(passwordBox).attr('type', 'text');
            } else {
                $(passwordBox).attr('type', 'password');
            }
        }


        $('#frmPass').submit(function(e) {
            e.preventDefault();
            var form = $(this);
            var url = form.attr('action');
            console.log(url);
            $.ajax({
                type: "POST",
                url: url,
                data: form.serialize(),
                success: function({ msg }) {
                    alert(msg);
                    $('#btnClose').click();
                },
                error: function(response) {
                    alert(response.responseJSON.msg);
                }
            });
        });

        $('#btnCapNhatMatKhau').click(() => {
            $('#frmPass').submit();
        });


        $('#upload').submit(function(e) {
            e.preventDefault(); // stop the standard form submission

            $.ajax({
                url: this.action,
                type: this.method,
                data: new FormData(this),
                cache: false,
                contentType: false,
                processData: false,
                success: function(data) {
                    alert(data.msg);
                },
                error: function(xhr, error, status) {
                    alert(error);
                }
            });
        });

        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function(e) {
                    $('.picture__image').attr('src', e.target.result);
                };
                reader.readAsDataURL(input.files[0]); // convert to base64 string
            }
        }

        $("#fileUpload").change(function() {
            readURL(this);
        });


        $('#frm').submit(function(e) {
            e.preventDefault();
            var form = $(this);
            var url = form.attr('action');
            console.log(url);
            $.ajax({
                type: "POST",
                url: url,
                data: form.serialize(),
                success: function({ msg }) {
                    alert(msg);
                },
                error: function(response) {
                    alert(response.responseJSON.msg);
                }
            });
        });

        $('#ListTourNav').click(function(event) {
            event.preventDefault();
            $.ajax({
                type: "GET",
                url: "/user/GetListTour",
                success: function({ data }) {
                    var htmlContent = '';
                    if (data.length == 0) {
                        htmlContent = `<tr>
<td colspan="9" data-th="Stt">Chưa có lịch sử đi tour</td>
</tr>`;
                    } else {
                        var i = 1;
                        data.forEach(function (item) {
                                htmlContent += `<tr>
    <td data-th="Stt">${i}</td>
    <td data-th="Stt">${item.TourCode}</td>
    <td data-th="Stt">${item.DiemDen}</td>
    <td data-th="Stt">${item.NgayKhoiHanh}</td>
    <td data-th="Stt">${item.DiemDen}</td>
    <td data-th="Stt">${item.LoaiVe}</td>
    <td data-th="Stt">${item.SoLuongVe}</td>
    <td data-th="Stt">${item.TongTien}</td>
    <td></td>
</tr>`;
                            }
                        );
                    }

                    var content = $(".col-lg-9.col-md-12.col-sm-12.col-xs-12.noidungtin")[0];
                    $(content).empty();
                    var html = `<table id = "myTable" class="table table-hover table-striped">
                                <thead style = "background: linear-gradient(to right, #1183f3 , #11aef3);color: #fff;">
                                <tr>  
                                    <th style = "width: 4%"> Stt </th>
                                    <th> Tourcode </th>  
                                    <th> Tên tour </th>  
                                    <th> Ngày khởi hành </th>  
                                    <th> Điểm đến </th>  
                                    <th> Loại tour </th>  
                                    <th> Số Lượng </th>
                                    <th> Giá </th>
                                    <th></th> 
                                </tr>
                                </thead>  
                                    <tbody>
                                        ${htmlContent}
                                     </tbody>
                                </table>`;
                    $(content).append(html);
                }

                , error: function(data) {
                    alert(data.msg);
                } 
            });
        });

        $('.ThongTinTaiKhoanNav').click(function (event) {
            event.preventDefault();
            window.location.reload(false);
        });
    </script>
}