<div id="main-content">
    <div id="tuvankhachhang">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 text-center mg-bot30">
                    <h2 style="font-size: x-large; font-weight: 700;">Thông tin khách hàng</h2>
                </div>
                <div class="col-xs-12">
                    <div class="row">
                        <div class="col-lg-3 col-md-12 col-sm-12 col-xs-12 noidungtin">

                            <div class="profile-sidebar">

                                <div class="profile-usermenu">
                                    <style>
                                        .nav .active {
                                            background-color: #D0D0D0;
                                            border-left: 2px solid;
                                            color: #1e94f2;
                                        }

                                        .profile-sidebar .nav > li:hover {
                                            background-color: #D0D0D0;
                                            border-left: 2px solid;
                                            color: #1e94f2;
                                        }

                                        .profile-sidebar .nav > li a:hover { color: #1e94f2; }
                                    </style>
                                    <ul class="nav" style="background: #f6f6f3">
                                        <li class="active">
                                            <a class="ThongTinTaiKhoanNav">
                                                <i style="color: #6f6f6f; font-size: 12px;" class="glyphicon glyphicon-home"></i>
                                                &nbsp;Thông tin chung
                                            </a>
                                        </li>
                                        <li class="">
                                            <a href="/User/ListTour" id="ListTourNav">
                                                <i style="color: #6f6f6f; font-size: 12px;" class="fa fa-history"></i>
                                                &nbsp;Lịch sử đi tour
                                            </a>
                                        </li>
                                    </ul>
                                </div>

                            </div>
                        </div>
                        <div class="col-lg-9 col-md-12 col-sm-12 col-xs-12 noidungtin">
                            <div class="picture-box">
                                <img class="picture__image" src="@Model.DuongDanAnh"/>
                                <form id="upload" enctype="multipart/form-data" action="@Url.Action("UploadFile", "User")" method="POST">
                                    <input type="file" name="fileUpload" id="fileUpload" size="23"/>
                                    <button class="picture__button">Đổi ảnh cá nhân</button>
                                </form>
                            </div>
                            <p>
                                <strong style="color: #1583e0 !important; text-transform: uppercase;">I. Thông tin tài khoản</strong>
                            </p>
                            <div class="row mg-bot5">
                                <div class="col-md-2 col-sm-3 col-xs-4">
                                    <label>Mã khách hàng:</label>
                                </div>
                                <div class="col-md-4 col-sm-4 col-xs-8">
                                    <input class="form-control" disabled="disabled" id="CustomerNo" name="CustomerNo" type="text" value="@Model.MaKhachHang">
                                </div>
                            </div>
                            <div class="row mg-bot5">
                                <div class="col-md-2 col-sm-3 col-xs-4">
                                    <label>Mật khẩu:</label>
                                </div>
                                <div class="col-md-4 col-sm-4 col-xs-8">
                                    <input class="form-control" disabled="disabled" id="Password" name="Password" type="password" value="**********">
                                </div>
                                <div class="col-md-5 col-sm-5 col-xs-8">
                                    <button class="btn btn-primary" onclick="DoiPass()">
                                        Thay đổi &nbsp;<i class="fa fa-edit"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="row mg-bot5">
                                <div class="col-md-2 col-sm-3 col-xs-4">
                                    <label>Ngày đăng kí:</label>
                                </div>
                                <div class="col-md-4 col-sm-4 col-xs-8">
                                    <input class="form-control" disabled="disabled" name="RegistrationDay" value="@Model.ThoiGianDangKi.ToString("dd/MM/yyy")">
                                </div>
                            </div>
                            <div class="row mg-bot5">
                            </div>
                            <p>
                                <strong style="color: #1583e0 !important; text-transform: uppercase;">II. Thông tin khách hàng</strong>
                            </p>
                            <form action="/User/UpdateCustomerInformation" enctype="multipart/form-data" id="frm" method="post" name="frm" novalidate="novalidate">
                                <div class="row mg-bot5">
                                    <div class="col-md-2 col-sm-2 col-xs-4">
                                        <label>Họ tên <span style="color: red">(*)</span>:</label>
                                    </div>
                                    <div class="col-md-4 col-sm-4 col-xs-8">
                                        <input type="text" name="CustomerName" id="CustomerName" class="form-control" data-val="true" data-val-required="Vui lòng nhập" value="@Model.Ten">
                                        <div class="field-validation-valid text-danger" data-valmsg-for="CustomerName" data-valmsg-replace="true"></div>
                                    </div>
                                    <div class="col-md-2 col-sm-2 col-xs-4">
                                        <label>Giới tính <span style="color: red">(*)</span>:</label>
                                    </div>
                                    <div class="col-md-4 col-sm-4 col-xs-8">
                                        <select class="form-control" data-val="true" data-val-number="The field Gender must be a number." id="Gender" name="Gender">
                                            @if (Model.GioiTinh)
                                            {
                                                <option selected="selected" value="1">Nam</option>
                                                <option value="0">Nữ</option>
                                            }
                                            else
                                            {
                                                <option value="1">Nam</option>
                                                <option selected="selected" value="0">Nữ</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-2 col-sm-2 col-xs-4">
                                        <label>Ngày sinh <span style="color: red">(*)</span>:</label>
                                    </div>
                                    <div class="col-md-4 col-sm-4 col-xs-8">
                                        <input type="text" name="Birthday" id="Birthday" class="form-control" data-val="true" data-val-required="Vui lòng nhập" value="@Model.NgaySinh.ToString("dd/MM/yyyy")">
                                        <div class="field-validation-valid text-danger" data-valmsg-for="Birthday" data-valmsg-replace="true"></div>
                                    </div>
                                    <div class="col-md-2 col-sm-2 col-xs-4">
                                        <label>Email <span style="color: red">(*)</span>:</label>
                                    </div>
                                    <div class="col-md-4 col-sm-4 col-xs-8">
                                        <input class="form-control" data-val="true" data-val-email="Vui lòng nhập đúng định dạng email" data-val-required="Vui lòng nhập" id="Email" name="Email" type="email" value="@Model.Email">
                                        <div style="margin-top: 5px" class="field-validation-valid text-danger" data-valmsg-for="Email" data-valmsg-replace="true"></div>
                                    </div>
                                </div>
                                <div class="row mg-bot30 ">
                                    <div class="col-md-2 col-sm-2 col-xs-4">
                                        <label>Địa chỉ <span style="color: red">(*)</span>:</label>
                                    </div>
                                    <div class="col-md-10 col-sm-10 col-xs-8">
                                        <input type="text" name="Address" id="Address" class="form-control" data-val="true" data-val-required="Vui lòng nhập" value="@Model.DiaChi">
                                        <div style="margin-top: 5px" class="field-validation-valid text-danger" data-valmsg-for="Address" data-valmsg-replace="true"></div>
                                    </div>
                                </div>
                                <div class="row mg-bot30">
                                    <div class="col-xs-12 text-right">
                                        <button id="btCapNhat" type="submit" class="btn btn-md btn-default">Cập nhật&nbsp;&nbsp;<i class="fa fa-save"></i></button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
